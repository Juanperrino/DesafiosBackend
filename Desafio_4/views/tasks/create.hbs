<div class="">
  <form action="{{url}}" method="{{metodo}}">
    <div class="">
      <label for="title">Title:</label>
      <input
        type="text"
        name="title"
        placeholder="Escribi un titulo"
        class="form-control"
        value="{{task.title}}"
        autofocus
      />
    </div>
    <div class="">
      <label for="title">Price:</label>
      <input
        type="text"
        name="price"
        placeholder="Escribi un precio"
        class="form-control"
        value="{{task.price}}"
        autofocus
      />
    </div>
    <div class="">
      <label for="description">Descripcion:</label>
      <textarea
        name="description"
        class="form-control"
        placeholder="Escribi una descripcion"
        rows="3"
      >{{task.description}}</textarea>
    </div>
    <button type="submit" class="btn btn-primary btn-block">
      {{botonName}}
    </button>
  </form>
</div>